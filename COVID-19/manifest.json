{
    "manifest_version" : 2,
    "name" : "COVID-19 Tracker",
    "description" : "A firefox extension that shows you an up to date analysis of the covid-19 pandemic in your country.",
    "version" : "1.0",
    "icons" : {
        "128" : "icons/icon128.png",
        "48" : "icons/icon48.png",
        "16" : "icons/icon16.png"
    },

    "browser_action" : {
        "default_icon" : "icons/icon16.png",
        "default_title": "COVID-19 Tracker",
        "default_popup" : "popup.html"
    },
    
    "background" : {
        "scripts" : [
            "lib/jquery.min.js",
            "lib/reusable.js",
            "bg/background.js"
        ]
    },
    
    "permissions" : [
        "tabs"
    ]

}